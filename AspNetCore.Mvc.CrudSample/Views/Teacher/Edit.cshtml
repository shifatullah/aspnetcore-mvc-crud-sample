@{
}

@model TeacherViewModel

<div class="container">
    <div class="py-5 text-center">
        <h2>New Teacher</h2>
        <p class="lead">
            Here teacher information can be entered. Internally each teacher has an auto generated Id. <br />
            Teacher name and course information is required from the user and validation is performed at server.
        </p>
    </div>
</div>

<form asp-controller="Teacher" asp-action="Edit" method="post">
    @if(Model.Id != 0){
        <div class="form-group row mb-3">
            <div class="col-sm-12">
                <label for="Id">Id</label>
                <span class="form-control">@Model.Id</span>
            </div>
        </div>
    }
    <div class="form-group row mb-3">
        <div class="col-sm-12">
            <label for="Name">Name</label>
            <input type="text" class="form-control" asp-for="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-3">
        <div class="col-sm-12">
            <label for="Course">Course</label>
            <select class="custom-select d-block w-100" asp-for="Course" asp-items="Model.CoursesListItem">
                <option value="">Select Course</option>
            </select>
            <span asp-validation-for="Course" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-3">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-primary">Save</button>
            <a class="btn btn-secondary" asp-controller="Teacher" asp-action="Index" role="button">Cancel</a>
        </div>
    </div>
</form>